<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.fouroulis.vasilis.artkotsis.model.PaperItem"  />
    </data>
    <LinearLayout
        android:id="@+id/item_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textIsSelectable="true"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        tools:context=".ItemDetailFragment" >

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="31dp"
                android:layout_height="98dp"
                android:src="@drawable/arrow1"
                android:layout_marginTop="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

            <ImageView
                android:layout_width="31dp"
                android:layout_height="98dp"
                android:src="@drawable/arrow2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="60dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp"
            android:layout_weight="4"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            android:background="@drawable/borders_details">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:text="dfhgkdfhg"
                android:id="@+id/title"
                android:layout_alignParentTop="true"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:text="@{item.gramsPerSquareMetre}"
                android:id="@+id/density"
                android:layout_above="@+id/density_pointer"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:id="@+id/density_pointer"
                android:text="@string/density_pointer"
                android:layout_above="@+id/bit"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:text="@{item.bit}"
                android:id="@+id/bit"
                android:layout_above="@+id/dpi"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:id="@+id/dpi"
                android:text="@{item.dpi}"
                android:layout_above="@+id/color"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:id="@+id/color"
                android:text="@string/color"
                android:layout_above="@+id/resolution_pointer"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:id="@+id/resolution_pointer"
                android:text="@string/resolution"
                android:layout_above="@+id/bytes"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:id="@+id/bytes"
                android:text="@{item.bytes}"
                android:layout_above="@+id/paper"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:id="@+id/paper"
                android:text="@{item.paperType}"
                android:layout_above="@+id/scan_jet"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:id="@+id/scan_jet"
                android:text="@{item.scanPrinter}"
                android:layout_above="@+id/date"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:text="@{item.dateTime}"
                android:id="@+id/date"
                android:layout_above="@+id/serial_number"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#000"
                android:id="@+id/serial_number"
                android:text="@{item.serialNumber}"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:id="@+id/image_view"/>
    </LinearLayout>

</layout>
